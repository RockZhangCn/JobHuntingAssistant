{
  "manifest_version": 3,
  "name": "JobApplyHelper",
  "version": "1.0",
  "description": "Extract position information that needed in a cover letter.",
  "permissions": ["activeTab", "scripting", "downloads", "declarativeContent"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/", "https://manyouglobal.com/"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": ["https://www.linkedin.com/", "https://manyouglobal.com/"]
}
